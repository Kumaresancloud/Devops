#!/bin/bash

set -euo pipefail

REGION="us-east-1"
REPORT="http_only_lbs_report.csv"
echo "Region,LB Name,App,BU,Env,Security Group ID,Number of Targets" > "$REPORT"

# Fetch all load balancer details in one call
ALL_LBS=$(aws elbv2 describe-load-balancers --region "$REGION" --output json)

# Loop through each LB
echo "$ALL_LBS" | jq -c '.LoadBalancers[]' | while read LB_DESC; do
  LB_ARN=$(echo "$LB_DESC" | jq -r '.LoadBalancerArn')
  
  # Get protocols for current LB
  LISTENER_PROTOCOLS=$(aws elbv2 describe-listeners \
    --region "$REGION" \
    --load-balancer-arn "$LB_ARN" \
    --query 'Listeners[].Protocol' \
    --output text)

  # Check if the LB has only HTTP listeners
  if [[ "$LISTENER_PROTOCOLS" =~ ^HTTP$ ]]; then
    LB_NAME=$(echo "$LB_DESC" | jq -r '.LoadBalancerName')
    SG_ID=$(echo "$LB_DESC" | jq -r '.SecurityGroups[0] // "N/A"')

    # Get tags for this LB
    TAGS=$(aws elbv2 describe-tags \
      --region "$REGION" \
      --resource-arns "$LB_ARN" \
      --query 'TagDescriptions[0].Tags' --output json)

    APP=$(echo "$TAGS" | jq -r '.[] | select(.Key=="app") | .Value // "N/A"')
    BU=$(echo "$TAGS" | jq -r '.[] | select(.Key=="bu") | .Value // "N/A"')
    ENV=$(echo "$TAGS" | jq -r '.[] | select(.Key=="env") | .Value // "N/A"')

    # Get target groups for this LB
    TARGET_GROUPS=$(aws elbv2 describe-target-groups \
      --region "$REGION" \
      --load-balancer-arn "$LB_ARN" \
      --query 'TargetGroups[].TargetGroupArn' \
      --output text)

    NUM_TARGETS=0
    for TG_ARN in $TARGET_GROUPS; do
      COUNT=$(aws elbv2 describe-target-health \
        --region "$REGION" \
        --target-group-arn "$TG_ARN" \
        --query 'TargetHealthDescriptions' \
        --output json | jq length)
      NUM_TARGETS=$((NUM_TARGETS + COUNT))
    done

    # Write to CSV
    echo "$REGION,$LB_NAME,$APP,$BU,$ENV,$SG_ID,$NUM_TARGETS" >> "$REPORT"
  fi
done

echo "âœ… Report generated: $REPORT"
