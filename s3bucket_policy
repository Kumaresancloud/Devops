#!/bin/bash

POLICY_ARN="arn:aws:iam::aws:policy/AmazonS3FullAccess"
OUTPUT_FILE="replication_enabled_buckets.csv"

echo "Bucket Name,Role ARN,Remediation" > "$OUTPUT_FILE"

buckets=$(aws s3api list-buckets --query "Buckets[].Name" --output text)

for bucket in $buckets; do
  echo "ğŸ” Checking bucket: $bucket"

  replication=$(aws s3api get-bucket-replication --bucket "$bucket" 2>/dev/null)

  if [ $? -eq 0 ]; then
    echo "âœ… Replication enabled for $bucket"

    role_arn=$(echo "$replication" | jq -r '.Role // empty')
    echo "ğŸ”— Replication role ARN: $role_arn"

    if [[ -z "$role_arn" ]]; then
      echo "âš ï¸ Role ARN not found in replication config for $bucket"
      echo "$bucket,N/A,Replication role not found" >> "$OUTPUT_FILE"
      continue
    fi

    role_name=$(basename "$role_arn")
    echo "ğŸ§¾ Extracted role name: $role_name"

    if ! aws iam get-role --role-name "$role_name" >/dev/null 2>&1; then
      echo "âŒ Role $role_name not found or cross-account for $bucket"
      echo "$bucket,$role_arn,Role not found or cross-account" >> "$OUTPUT_FILE"
      continue
    fi

    echo "ğŸ” Checking attached policies for role $role_name..."
    attached=$(aws iam list-attached-role-policies --role-name "$role_name" --query "AttachedPolicies[].PolicyArn" --output text)

    echo "ğŸ“‹ Attached policies: $attached"

    if echo "$attached" | grep -q "$POLICY_ARN"; then
      echo "âœ… Role $role_name already has AmazonS3FullAccess"
      echo "$bucket,$role_arn,Already has S3FullAccess" >> "$OUTPUT_FILE"
    else
      echo "ğŸ› ï¸ Attaching AmazonS3FullAccess to $role_name..."
      if aws iam attach-role-policy --role-name "$role_name" --policy-arn "$POLICY_ARN"; then
        echo "âœ… Policy attached successfully"
        echo "$bucket,$role_arn,Attached S3FullAccess" >> "$OUTPUT_FILE"
      else
        echo "âŒ Failed to attach policy to $role_name"
        echo "$bucket,$role_arn,Failed to attach policy" >> "$OUTPUT_FILE"
      fi
    fi
  else
    echo "â© Skipping $bucket â€” replication not enabled"
  fi
done

echo "ğŸ¯ Script complete. See '$OUTPUT_FILE'"
